{
    "configurations": [
      {
        "type": "node",
        "name": "vscode-jest-tests",
        "request": "launch",
        "runtimeExecutable": "/opt/homebrew/bin/yarn",
        "args": [
          "test",
          "--runInBand",
          "--watchAll=false"
        ],
        "cwd": "${fileDirname}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "disableOptimisticBPs": true,
      },
      {
            "type": "pwa-chrome",
            "name": "Elephant (3000)",
            "request": "launch",
            "url": "http://localhost:3000/elephant"
        },
        {
            "type": "node",
            "name": "Test All",
            "request": "launch",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/opt/homebrew/bin/yarn",
            "args": [
                "jest",
                "--watch",
            ]
        },
        {
          "type": "node",
          "name": "Test Shell",
          "request": "launch",
          "console": "integratedTerminal",
          "disableOptimisticBPs": true,
          "cwd": "${fileDirname}",
          "runtimeExecutable": "zsh"
      }
    ]
}
