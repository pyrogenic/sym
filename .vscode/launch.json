{
    "configurations": [
        {
            "type": "pwa-chrome",
            "name": "Elephant (3000)",
            "request": "launch",
            "url": "http://localhost:3000/elephant"
        },
        {
            "type": "node",
            "name": "Test All",
            "request": "launch",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/opt/homebrew/bin/yarn",
            "args": [
                "jest",
                "--watch",
            ]
        }
    ]
}
